<Page x:Class="BarInventoryApp.Pages.OrdersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BarInventoryApp.Pages"
      mc:Ignorable="d" 
      Title="Заказы на ингредиенты"
      Background="{StaticResource BackgroundBrush}">
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Верхняя панель -->
        <Grid Margin="0,0,0,20">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                <Button Content="← Назад" Click="OnBackClick" 
                        Style="{StaticResource SecondaryButton}" 
                        Padding="12,8" Margin="0,0,10,0"/>
                <Button Content="Выход" Click="OnLogoutClick" 
                        Style="{StaticResource SecondaryButton}" 
                        Padding="12,8"/>
            </StackPanel>
            <TextBlock Text="📋 Заказы на ингредиенты" 
                       Style="{StaticResource PageTitle}" 
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center"
                       Margin="0"/>
        </Grid>

        <!-- Панель действий -->
        <Border Grid.Row="1" Style="{StaticResource Card}" Padding="16" Margin="0,0,0,16">
            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                    <TextBox Text="{Binding Filter, UpdateSourceTrigger=PropertyChanged}" 
                             Style="{StaticResource ModernTextBox}"
                             Width="300"/>
                    <TextBlock Text="🔍 Поиск" VerticalAlignment="Center" Margin="10,0,0,0" 
                               FontSize="14" Foreground="{StaticResource TextSecondaryBrush}"/>
                </StackPanel>
                
                <StackPanel Orientation="Horizontal">
                    <Button Content="+ Создать заказ" Command="{Binding AddCommand}" 
                            Style="{StaticResource PrimaryButton}"
                            Margin="0,0,8,0" Padding="16,10"/>
                    <Button Content="Редактировать" Command="{Binding EditCommand}" 
                            Style="{StaticResource SecondaryButton}"
                            Margin="0,0,8,0" Padding="16,10"/>
                    <Button Content="Удалить" Command="{Binding DeleteCommand}" 
                            Style="{StaticResource DangerButton}"
                            Margin="0,0,8,0" Padding="16,10"/>
                    <Button Content="Экспорт в Excel" Command="{Binding ExportCommand}" 
                            Style="{StaticResource SecondaryButton}"
                            Padding="16,10"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Таблица -->
        <Border Grid.Row="2" Style="{StaticResource Card}" Padding="0">
            <DataGrid x:Name="OrdersGrid"
                      ItemsSource="{Binding Orders}"
                      SelectedItem="{Binding SelectedItem}"
                      Style="{StaticResource ModernDataGrid}"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      BorderThickness="0">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ИНГРЕДИЕНТ" Binding="{Binding Ingredient.Name}" Width="*"/>
                    <DataGridTextColumn Header="КОЛИЧЕСТВО" Binding="{Binding Quantity, StringFormat=N2}" Width="110"/>
                    <DataGridTextColumn Header="ЕД." Binding="{Binding Ingredient.Unit}" Width="70"/>
                    <DataGridTextColumn Header="ДАТА" Binding="{Binding OrderDate, StringFormat='dd.MM.yyyy HH:mm'}" Width="150"/>
                    <DataGridTextColumn Header="АВТОР" Binding="{Binding CreatedByNavigation.Login}" Width="130"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>
    </Grid>
</Page>

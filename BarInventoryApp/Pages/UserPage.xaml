<Page x:Class="BarInventoryApp.Pages.UserPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BarInventoryApp.Pages"
      mc:Ignorable="d" 
      Title="Управление пользователями"
      Background="{StaticResource BackgroundBrush}">
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Верхняя панель -->
        <Grid Margin="0,0,0,20">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                <Button Content="← Назад" Click="OnBackClick" 
                        Style="{StaticResource SecondaryButton}" 
                        Padding="12,8" Margin="0,0,10,0"/>
                <Button Content="Выход" Click="OnLogoutClick" 
                        Style="{StaticResource SecondaryButton}" 
                        Padding="12,8"/>
            </StackPanel>
            <TextBlock Text="👥 Управление пользователями" 
                       Style="{StaticResource PageTitle}" 
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center"
                       Margin="0"/>
        </Grid>

        <!-- Форма создания нового пользователя -->
        <Border Grid.Row="1" Style="{StaticResource Card}" Padding="20" Margin="0,0,0,16">
            <StackPanel>
                <TextBlock Text="Новый пользователь" 
                           FontSize="16" FontWeight="SemiBold" 
                           Foreground="{StaticResource TextBrush}"
                           Margin="0,0,0,16"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="160"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Margin="0,0,12,0">
                        <TextBlock Text="Логин" FontSize="13" FontWeight="Medium" 
                                   Foreground="{StaticResource TextBrush}" Margin="0,0,0,6"/>
                        <TextBox Text="{Binding Login, UpdateSourceTrigger=PropertyChanged}" 
                                 Style="{StaticResource ModernTextBox}"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Margin="0,0,12,0">
                        <TextBlock Text="Пароль" FontSize="13" FontWeight="Medium" 
                                   Foreground="{StaticResource TextBrush}" Margin="0,0,0,6"/>
                        <TextBox Text="{Binding Password, UpdateSourceTrigger=PropertyChanged}" 
                                 Style="{StaticResource ModernTextBox}"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2" Margin="0,0,12,0">
                        <TextBlock Text="Роль" FontSize="13" FontWeight="Medium" 
                                   Foreground="{StaticResource TextBrush}" Margin="0,0,0,6"/>
                        <ComboBox ItemsSource="{Binding Roles}" 
                                  SelectedValue="{Binding SelectedRoleId}"
                                  SelectedValuePath="Id"
                                  DisplayMemberPath="Name"
                                  Style="{StaticResource ModernComboBox}"/>
                    </StackPanel>

                    <Button Grid.Column="3" Content="+ Создать" 
                            Command="{Binding CreateUserCommand}" 
                            Style="{StaticResource PrimaryButton}"
                            VerticalAlignment="Bottom"
                            Padding="20,10"/>
                </Grid>
            </StackPanel>
        </Border>

        <!-- Таблица и панель редактирования -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <!-- Таблица пользователей -->
            <Border Style="{StaticResource Card}" Padding="0" Margin="0,0,16,0">
                <DataGrid x:Name="UsersGrid"
                          ItemsSource="{Binding Users}"
                          SelectedItem="{Binding SelectedUser}"
                          Style="{StaticResource ModernDataGrid}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          BorderThickness="0">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ЛОГИН" Binding="{Binding Login}" Width="*"/>
                        <DataGridTextColumn Header="РОЛЬ" Binding="{Binding Role.Name}" Width="180"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>

            <!-- Панель редактирования роли -->
            <Border Grid.Column="1" Style="{StaticResource Card}" 
                    Width="240" Padding="20"
                    Visibility="{Binding SelectedUser, Converter={StaticResource NullToVisibilityConverter}}">
                <StackPanel>
                    <TextBlock Text="✏️ Редактирование" 
                               FontSize="16" FontWeight="SemiBold" 
                               Foreground="{StaticResource TextBrush}"
                               Margin="0,0,0,16"/>
                    
                    <TextBlock Text="Изменить роль" FontSize="13" FontWeight="Medium" 
                               Foreground="{StaticResource TextBrush}" Margin="0,0,0,6"/>
                    <ComboBox x:Name="RoleComboBox" 
                              ItemsSource="{Binding Roles}" 
                              SelectedValue="{Binding SelectedRoleId}"
                              SelectedValuePath="Id"
                              DisplayMemberPath="Name"
                              Style="{StaticResource ModernComboBox}"
                              Margin="0,0,0,16"/>
                    
                    <Button Content="Сохранить" 
                            Command="{Binding SaveUserCommand}" 
                            Style="{StaticResource PrimaryButton}"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Page>

<Page x:Class="BarInventoryApp.Pages.AdminDashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BarInventoryApp.Pages"
      mc:Ignorable="d" 
      Title="Панель администратора"
      Background="{StaticResource BackgroundBrush}">
    <Grid>
        <Button Content="Выход" Click="OnLogoutClick" 
                Style="{StaticResource SecondaryButton}"
                HorizontalAlignment="Right" VerticalAlignment="Top" 
                Margin="24" Padding="16,8"/>
        
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="360">
            <TextBlock Text="👋" FontSize="40" HorizontalAlignment="Center" Margin="0,0,0,8"/>
            <TextBlock Text="Панель администратора" 
                       Style="{StaticResource PageTitle}" 
                       HorizontalAlignment="Center"/>
            <TextBlock Text="Выберите раздел для работы" 
                       Style="{StaticResource SubTitle}" 
                       HorizontalAlignment="Center" 
                       Margin="0,0,0,32"/>

            <Button Content="📦  Ингредиенты" 
                    Click="OnIngredientsClick" 
                    Style="{StaticResource PrimaryButton}"
                    HorizontalAlignment="Stretch"
                    Margin="0,0,0,12" 
                    Padding="16,14"/>
            <Button Content="📋  Заказы на ингредиенты" 
                    Click="OnOrdersClick" 
                    Style="{StaticResource PrimaryButton}"
                    HorizontalAlignment="Stretch"
                    Margin="0,0,0,12" 
                    Padding="16,14"/>
            <Button Content="👥  Пользователи" 
                    Click="OnUsersClick" 
                    Style="{StaticResource PrimaryButton}"
                    HorizontalAlignment="Stretch"
                    Padding="16,14"/>
        </StackPanel>
    </Grid>
</Page>

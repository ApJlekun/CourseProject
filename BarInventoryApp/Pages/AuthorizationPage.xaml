<Page x:Class="BarInventoryApp.Pages.AuthorizationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BarInventoryApp.Pages"
      mc:Ignorable="d" 
      Title="Авторизация"
      Background="{StaticResource BackgroundBrush}">
    <Grid>
        <Border Style="{StaticResource Card}" 
                HorizontalAlignment="Center" VerticalAlignment="Center" 
                Width="380">
            <StackPanel>
                <TextBlock Text="🍸" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                <TextBlock Text="Bar Inventory" 
                           Style="{StaticResource PageTitle}" 
                           HorizontalAlignment="Center" 
                           Margin="0,0,0,8"/>
                <TextBlock Text="Войдите в систему для продолжения" 
                           Style="{StaticResource SubTitle}" 
                           HorizontalAlignment="Center" 
                           Margin="0,0,0,24"/>
                
                <TextBlock Text="Логин" FontSize="13" FontWeight="Medium" 
                           Foreground="{StaticResource TextBrush}" Margin="0,0,0,6"/>
                <TextBox x:Name="LoginBox" 
                         Text="{Binding Login, UpdateSourceTrigger=PropertyChanged}" 
                         Style="{StaticResource ModernTextBox}"
                         Margin="0,0,0,16"/>
                
                <TextBlock Text="Пароль" FontSize="13" FontWeight="Medium" 
                           Foreground="{StaticResource TextBrush}" Margin="0,0,0,6"/>
                <PasswordBox x:Name="PasswordBox"
                             PasswordChanged="PasswordBox_PasswordChanged"
                             FontSize="14" Padding="12,10" Margin="0,0,0,24">
                    <PasswordBox.Template>
                        <ControlTemplate TargetType="PasswordBox">
                            <Border Background="White" 
                                    BorderBrush="{StaticResource BorderBrush}"
                                    BorderThickness="1"
                                    CornerRadius="6">
                                <ScrollViewer x:Name="PART_ContentHost" Margin="12,10"/>
                            </Border>
                        </ControlTemplate>
                    </PasswordBox.Template>
                </PasswordBox>

                <Button Content="Войти" 
                        Command="{Binding LoginCommand}" 
                        Style="{StaticResource PrimaryButton}"
                        IsDefault="True"
                        HorizontalAlignment="Stretch"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
